@model coteo.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true"/>

<div class="form">
      
    <ul class="tab-group">
		<li class="tab active"><a href='/Account/Register'>Регистрация</a></li>
		<li class="tab"><a href='/Account/Login'>Авторизация</a></li>
    </ul>
    
    <div class="tab-content">
		<div id="signup">   
			<h1>Регистрация</h1>
			
			<form method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
				
				<div class="field-wrap">
					<label>
						Полное имя<span class="req">*</span>
					</label>
                    <input asp-for="FullName" type="text" required autocomplete="off"/>
				</div>
		
				<div class="field-wrap">
					<label>
						Email<span class="req">*</span>
					</label>
                    <input asp-for="Email" type="email"required autocomplete="off"/>
				</div>
				
				<div class="top-row">
					<div class="field-wrap">
						<label>
							Введите пароль<span class="req">*</span>
						</label>
                        <input asp-for="Password" type="password"required autocomplete="off"/>
					</div>
				
					<div class="field-wrap">
						<label>
							Повторите пароль<span class="req">*</span>
						</label>
                        <input asp-for="PasswordConfirm" type="password"required autocomplete="off"/>
					</div>
				</div>
				
				<button type="submit" class="button button-block"/>Зарегистрироваться</button>
			
			</form>
	
		</div>
      
    </div>
    
</div>